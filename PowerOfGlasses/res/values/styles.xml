<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
  
    <style name="CodeFont" parent="@android:style/TextAppearance.Large">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#DC143C</item>
        <item name="android:typeface">serif</item>
    </style>
    
     <style name="CodeFont.Medium" parent="@android:style/TextAppearance.Large">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#DC143C</item>
        <item name="android:typeface">sans</item>
    </style>
    
      <style name="CodeFont.Results" parent="@android:style/TextAppearance.Large">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#00008B</item>
        <item name="android:typeface">normal</item>
    </style>
    
<style name="CustomStyleButton" parent="@android:style/Widget.Button">
 <item name="android:textSize">16sp</item>
 <item name="android:textStyle">bold</item>
 <item name="android:textColor">#dedfdc</item>
 <item name="android:gravity">center</item>
 <item name="android:shadowColor">#000000</item>
 <item name="android:shadowDx">1</item>
 <item name="android:shadowDy">1</item>
 <item name="android:shadowRadius">0.6</item>
 <item  name="android:background">@drawable/custom_button</item>
 <item name="android:padding">10dip</item>
</style>
    
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    

</resources>
